{
  "name": "chat-system-app",
  "version": "1.0.0",
  "description": "A real-time chat application using Express and Socket.IO for the server and React for the client.",
  "main": "src/server.ts",
  "scripts": {
    "start": "ts-node src/server.ts",
    "build": "tsc",
    "client": "react-scripts start",
    "server": "nodemon src/server.ts",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "nodemon": "^2.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-scripts": "^5.0.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.0"
  },
  "keywords": [
    "chat",
    "real-time",
    "socket.io",
    "express",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT"
}
